{% trans_default_domain 'purchaseCredits' %}

{# Number of credits #}
<p>
    {{ 'label.credits'|transchoice(app.user.credits) }} :
    <strong>
        {% if app.user.credits < 0 %}
            <span class="red">
                {{ app.user.credits }} crd
            </span>
        {% elseif app.user.credits > 0 %}
            <span class="green">
                +{{ app.user.credits }} crd
            </span>
        {% else %}
            {{ app.user.credits }} crd
        {% endif %}
    </strong>
{# Transactions #}
    -
    <a href="{{ path('purchasecredits_transactions') }}">
        {{ 'label.transactions'|transchoice(2) }}</a>
{# Purchase Credits #}
    -
    <strong>
        <a href="{{ path('purchasecredits_purchase') }}">
            {{ 'label.purchase_credits'|trans }}</a>
    </strong>
{# Not enough credits #}
    {% if app.user.credits <= 0 %}
        <br />
        <span class="text-danger"><span class="fas fa-exclamation"></span>&nbsp;{{ 'text.no_credits'|trans }}</span>
    {% endif %}
</p>